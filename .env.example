# Configurações do Google Sheets API
# Obtenha as credenciais em: https://console.cloud.google.com/

# ID da planilha Google Sheets
SHEET_ID=seu_id_da_planilha_aqui

# ID da pasta do Google Drive para salvar currículos
DRIVE_FOLDER_ID=seu_id_da_pasta_drive_aqui

# Chave JSON da Service Account do Google Cloud (em uma única linha)
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"..."}

# Ambiente de execução
NODE_ENV=production

# Origem permitida para CORS (opcional - apenas para desenvolvimento local)
ALLOWED_ORIGIN=http://localhost:3000
